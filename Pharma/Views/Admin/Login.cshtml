@model Pharma.Models.Admin

@{
    ViewBag.Title = "Login";
}

<h2>Admin Login</h2>

@using (Html.BeginForm("Login", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Username)
        @Html.TextBox("username", null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.Password("password", null, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
}

<div>
    <h3>Seller Login</h3>
    @Html.ActionLink("Seller Login", "SellerLogin", "Seller", new { area = "" }, new { @class = "btn btn-secondary" })
</div>

<div>
    <h3>Customer Login</h3>
    @Html.ActionLink("Customer Login", "UserLogin", "User", new { area = "" }, new { @class = "btn btn-secondary" })
</div>
