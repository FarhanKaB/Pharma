        inset: 0;
        overflow: auto;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 9999;
    }

    .modal-content {
        position: relative;
        background-color: white;
        border-radius: 0;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.25);
        width: 100%;
        max-width: 100%;
        height: 100%;
        max-height: 100%;
        overflow: auto;
        padding: 20px;
    }

    #signInPopover {
        position: fixed;
        top: 20px; /* Position near the top of the screen */
        left: 50%; /* Center horizontally */
        transform: translateX(-50%); /* Center alignment */
        z-index: 10000; /* Ensure it appears above the modal */
        background-color: rgba(0, 0, 0, 0.8); /* Slight transparency to make it noticeable */
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.25);
        color: white;
        text-align: center; /* Center text inside the popover */
        max-width: 250px; /* Set a maximum width */
        height: 30px; /* Set a fixed height */
        justify-content: center; /* Center horizontally */
        align-items: center; /* Center vertically */
    }




</style>