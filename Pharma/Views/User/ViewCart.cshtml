@model List<Pharma.Models.Medicine>

<div class="modal" id="viewCartModal">
    <div class="modal-content">
        <span class="close" onclick="closeModal()">&times;</span>
        <div class="container">
            <h1 class="text-center my-4 cart-title">My Cart</h1>
            @if (Model != null && Model.Any())
            {
                <div class="row">
                    @foreach (var cartMedicine in Model)
                    {
                        <div class="col-md-12 mb-4">
                            <div class="border p-3 medicine-card">
                                <div class="grid grid-cols-4 gap-4 items-center">
                                    <div class="col-span-1">
                                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(cartMedicine.ImageData)" alt="@cartMedicine.MedicineName" class="img-fluid">
                                    </div>
                                    <div class="col-span-3">
                                        <h5 class="medicine-name">@cartMedicine.MedicineName</h5>
                                        <div class="details">
                                            <p><span class="detail-label">Manufacturer:</span> @cartMedicine.Manufacturer</p>
                                            <p><span class="detail-label">Generic Name:</span> @cartMedicine.GenericName</p>
                                            <p><span class="detail-label">Dosage Form:</span> @cartMedicine.DosageForm</p>
                                            <p><span class="detail-label">Strength:</span> @cartMedicine.Strength</p>
                                            <p><span class="detail-label">Quantity:</span> @cartMedicine.Quantity</p>
                                            <p><span class="detail-label">Category:</span> @cartMedicine.Category</p>
                                            <p><span class="detail-label">Price:</span> $@cartMedicine.Price</p>
                                        </div>
                                        <div class="mt-3">
                                            @using (Html.BeginForm("PlaceOrder", "User", FormMethod.Post))
                                            {
                                                @Html.AntiForgeryToken()
                                                @Html.Hidden("medicineId", cartMedicine.MedicineID)

                                                <label for="quantity" class="quantity-label">Quantity:</label>
                                                <input type="number" name="quantity" min="1" max="@cartMedicine.Quantity" value="1" class="form-control d-inline-block quantity-input">
                                               // @Html.Hidden("quantity", cartMedicine.Quantity)


                                                <button type="submit" class="btn btn-primary place-order-btn">Place Order</button>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="no-items">No items in your cart.</p>
            }
        </div>
    </div>
</div>

<style>
    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.8);
    }

    .modal-content {
        position: relative;
        margin: auto;
        padding: 20px;
        background-color: white;
        width: 80%;
        max-width: 1000px;
        top: 50px;
        border-radius: 8px;
    }

    .close {
        position: absolute;
        right: 20px;
        top: 20px;
        font-size: 30px;
        font-weight: bold;
        color: #aaa;
        cursor: pointer;
    }

    .cart-title {
        font-size: 2rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
    }

    .medicine-card {
        background-color: #f9f9f9;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s;
    }

        .medicine-card:hover {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

    .medicine-name {
        font-size: 1.5rem;
        font-weight: bold;
        color: #333;
    }

    .details {
        display: flex;
        flex-direction: column;
        gap: 5px;
        margin-top: 10px;
    }

    .detail-label {
        font-weight: bold;
        color: #555;
    }

    .quantity-label {
        font-weight: bold;
        margin-right: 10px;
    }

    .quantity-input {
        width: 80px;
        display: inline-block;
    }

    .place-order-btn {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        .place-order-btn:hover {
            background-color: #0056b3;
        }

    .no-items {
        font-size: 1.2rem;
        font-weight: bold;
        color: #333;
        text-align: center;
    }
</style>

<script>
    function closeModal() {
        document.getElementById('viewCartModal').style.display = 'none';
    }
</script>
