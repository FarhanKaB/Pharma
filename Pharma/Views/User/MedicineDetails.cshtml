@model Pharma.Models.Medicine

@{
    ViewBag.Title = "Medicine Details";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold">@Model.MedicineName</h1>
    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ImageData)" alt="@Model.MedicineName" class="mt-4 w-full max-w-md">
    <div class="mt-4">
        <p><strong>Generic Name:</strong> @Model.GenericName</p>
        <p><strong>Manufacturer:</strong> @Model.Manufacturer</p>
        <p><strong>Dosage Form:</strong> @Model.DosageForm</p>
        <p><strong>Strength:</strong> @Model.Strength</p>
        <p><strong>Quantity:</strong> @Model.Quantity</p>
        <p><strong>Price:</strong> $@Model.Price</p>
        <p><strong>Category:</strong> @Model.Category</p>
    </div>

    @if (Model.Quantity <= 0)
    {
        <p class="font-bold text-red-600">Out of Stock</p>
    }
</div>
