@model Pharma.Models.Seller

@{
    ViewBag.Title = "Seller Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #c9d6ff;
            background: linear-gradient(to right, #e2e2e2, #c9d6ff);
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }
    </style>
</head>

<body>
    <div class="container shadow p-5 bg-white rounded">
        <div class="row justify-content-center">
            <div class="col-md-8">
                @using (Html.BeginForm("SellerLogin", "Seller", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <h1 class="text-center mb-4">Seller Sign In</h1>
                    <div class="d-flex justify-content-center mb-4">
                        <a href="#" class="btn btn-outline-secondary mx-1"><i class="fa-brands fa-google-plus-g"></i></a>
                        <a href="#" class="btn btn-outline-secondary mx-1"><i class="fa-brands fa-facebook-f"></i></a>
                        <a href="#" class="btn btn-outline-secondary mx-1"><i class="fa-brands fa-github"></i></a>
                        <a href="#" class="btn btn-outline-secondary mx-1"><i class="fa-brands fa-linkedin-in"></i></a>
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Username, new { @class = "form-label" })
                        @Html.TextBox("username", null, new { @class = "form-control" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                        @Html.Password("password", null, new { @class = "form-control" })
                    </div>

                    <div class="mb-3">
                        <a href="#" class="text-decoration-none">Forget Your Password?</a>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Sign In</button>
                    </div>

                    <div class="text-center mt-4">
                        <span class="user-type">Are you an admin? </span>
                        @Html.ActionLink("Login", "Login", "Admin", new { area = "" }, new { @class = "link-secondary" })
                    </div>
                    <div class="text-center mt-2">
                        <span class="user-type">Are you a customer? </span>
                        @Html.ActionLink("Login", "UserLogin", "User", new { area = "" }, new { @class = "link-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
