@model Pharma.Models.SellerDashboardViewModel

@{
    ViewBag.Title = "Seller Dashboard";
    ViewBag.Header = "Dashboard";
    Layout = "~/Views/Shared/_SellerLayout.cshtml";
}

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <div class="card">
                    <div class="card-header bg-secondary text-white">
                        User Management
                    </div>
                    <div class="card-body">
                        <a href="@Url.Action("Index", "Users")" class="list-group-item list-group-item-action">View Users</a>
                        <a href="@Url.Action("Roles", "Users")" class="list-group-item list-group-item-action">Manage Roles</a>
                        <a href="@Url.Action("Permissions", "Users")" class="list-group-item list-group-item-action">Manage Permissions</a>
                    </div>
                </div>
                <div class="card mt-3">
                    <div class="card-header bg-secondary text-white">
                        Seller Management
                    </div>
                    <div class="card-body">
                        <a href="@Url.Action("Index", "Seller")" class="list-group-item list-group-item-action">View Sellers</a>
                        <a href="@Url.Action("Manage", "Seller")" class="list-group-item list-group-item-action">Manage Sellers</a>
                        <a href="@Url.Action("Orders", "Seller")" class="list-group-item list-group-item-action">View Orders</a>
                    </div>
                </div>
                <div class="card mt-3">
                    <div class="card-header bg-secondary text-white">
                        Report Management
                    </div>
                    <div class="card-body">
                        <a href="@Url.Action("Index", "Report")" class="list-group-item list-group-item-action">View Reports</a>
                        <a href="@Url.Action("Generate", "Report")" class="list-group-item list-group-item-action">Generate Report</a>
                        <a href="@Url.Action("Analytics", "Report")" class="list-group-item list-group-item-action">Analytics</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    System Overview
                </div>
                <div class="card-body row">
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h2><i class="bi bi-people"></i> @Model.TotalUsers</h2>
                                <h4>Users</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h2><i class="bi bi-cart4"></i> @Model.TotalOrders</h2>
                                <h4>Sales</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h2><i class="bi bi-capsule"></i> @Model.TotalMedicines</h2>
@*                                <h2><i class="bi bi-capsule"></i> 1875</h2>
*@                                <h4>Medicines</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header bg-secondary text-white">
                    Medicines
                </div>
                <div class="card-body">
                    <!-- Search input for medicine name -->
                    <input type="text" id="searchMedicine" class="form-control mb-3" placeholder="Search">

                    <!-- Medicines table -->
                    <table id="medicinesTable" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var medicine in Model.LatestMedicines)
                            {
                                <tr>
                                    <td>@medicine.MedicineID</td>
                                    <td>@medicine.Name</td>
                                    <td>@medicine.Price</td>
                                    <td>@medicine.Quantity</td>
                                    <td>
                                        @using (Html.BeginForm("AddToList", "Seller", FormMethod.Post, new { @class = "add-to-list-form" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.Hidden("medicineId", medicine.MedicineID)
                                            <input type="number" name="quantity" min="1" max="@medicine.Quantity" value="1" class="form-control mb-2" />
                                            <button type="submit" class="btn btn-primary btn-sm">Add to List</button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            @*<div class="card mt-4">
                <div class="card-body">
                    <a href="@Url.Action("ViewCart", "Seller")" class="btn btn-success">View Cart</a>
                </div>
            </div>*@
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            // Function to filter medicines table by name
            $('#searchMedicine').keyup(function () {
                var searchText = $(this).val().toLowerCase();
                $('#medicinesTable tbody tr').each(function () {
                    var nameText = $(this).find('td:nth-child(2)').text().toLowerCase();
                    if (nameText.includes(searchText)) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });

            // Form submission for adding medicine to cart (unchanged)
            $('.add-to-list-form').submit(function (event) {
                event.preventDefault();
                var $form = $(this);
                var url = $form.attr('action');
                var data = $form.serialize();

                $.post(url, data, function (response) {
                    alert('Medicine added to cart successfully!');
                }).fail(function () {
                    alert('Failed to add medicine to cart.');
                });
            });
        });
    </script>
}