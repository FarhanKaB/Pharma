@model Pharma.Models.SellerDashboardViewModel

@{
    ViewBag.Title = "Seller Dashboard";
    ViewBag.Header = "Dashboard";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">Website Overview</h3>
    </div>
    <div class="panel-body">
        <div class="col-md-3">
            <div class="well dash-box">
                <h2><span class="glyphicon glyphicon-user"></span> @Model.TotalUsers</h2>
                <h4>Users</h4>
            </div>
        </div>
        <div class="col-md-3 dash-box">
            <div class="well">
                <h2><span class="glyphicon glyphicon-list-alt"></span> @Model.TotalOrders</h2>
                <h4>Orders</h4>
            </div>
        </div>
        <div class="col-md-3 dash-box">
            <div class="well">
                <h2><span class="glyphicon glyphicon-stats"></span> @Model.TotalMedicines</h2>
                <h4>Medicines</h4>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">Latest Medicines</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var medicine in Model.LatestMedicines)
                {
                    <tr>
                        <td>@medicine.MedicineID</td>
                        <td>@medicine.Name</td>
                        <td>@medicine.Price</td>
                        <td>@medicine.Quantity</td>
                        <td>
                            @using (Html.BeginForm("AddToList", "Seller", FormMethod.Post, new { @class = "add-to-list-form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("medicineId", medicine.MedicineID)
                                <input type="number" name="quantity" min="1" max="@medicine.Quantity" value="1" class="form-control" />
                                <button type="submit" class="btn btn-primary">Add to List</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-body">
        <a href="@Url.Action("ViewCart", "Seller")" class="btn btn-success">View Cart</a>
    </div>
</div>

@section Scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.add-to-list-form').submit(function (event) {
                event.preventDefault(); // Prevent the default form submission

                var $form = $(this);
                var url = $form.attr('action');
                var data = $form.serialize();

                $.post(url, data, function (response) {
                    // Optionally show a success message or update the cart UI
                    alert('Medicine added to cart successfully!');
                }).fail(function () {
                    // Optionally show an error message
                    alert('Failed to add medicine to cart.');
                });
            });
        });
    </script>
}
